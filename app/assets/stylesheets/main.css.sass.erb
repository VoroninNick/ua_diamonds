        height: 118px
        position: absolute
        top: -115px
        left: 0
        right: 0
        z-index: 2
        transition: top .5s
        &.expand
            top: 0
        .header-login
            height: inherit
            background-color: #A0010F
            border-bottom: 1px solid #78010B
        .open-header-login-wrap
            .open-header-login
                width: 20px
                height: 20px
                background-color: #78010B
                cursor: pointer
                margin: 0 auto
                margin-top: 10px
